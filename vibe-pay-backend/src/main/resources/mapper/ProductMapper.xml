<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vibe.pay.backend.product.ProductMapper">

    <resultMap id="productResultMap" type="com.vibe.pay.backend.product.Product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
    </resultMap>

    <select id="findAll" resultMap="productResultMap">
        SELECT id, name, price FROM product
    </select>

    <select id="findById" resultMap="productResultMap">
        SELECT id, name, price FROM product WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (name, price) VALUES (#{name}, #{price})
    </insert>

    <update id="update">
        UPDATE product SET name = #{name}, price = #{price} WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM product WHERE id = #{id}
    </delete>

</mapper>